{
  "name": "product-explorer",
  "version": "1.0.0",
  "description": "Product search across multiple e-commerce sites",
  "main": "server/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "puppeteer": "^23.7.0",
    "cheerio": "^1.0.0",
    "multer": "^1.4.5-lts.1",
    "jimp": "^0.22.10"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
